<configuration>

	<!-- console logging configuration -->
	<appender name="consoleAppender"
		class="ch.qos.logback.core.ConsoleAppender">
	</appender>
	<logger name="jsonLogger" additivity="false" level="INFO">
		<appender-ref ref="consoleAppender" />
	</logger>
	<root level="INFO">
		<appender-ref ref="consoleAppender" />
	</root>

